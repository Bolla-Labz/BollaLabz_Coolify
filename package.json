{
  "name": "bollalabz",
  "version": "1.0.0",
  "private": true,
  "description": "BollaLabz Command Center - Enterprise-grade personal productivity platform",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:e2e": "turbo test:e2e",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rimraf node_modules .turbo",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "turbo": "2.3.0",
    "typescript": "5.9.3",
    "prettier": "3.4.1",
    "husky": "9.1.7",
    "lint-staged": "15.2.11",
    "rimraf": "6.0.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.14.0"
  },
  "packageManager": "pnpm@9.14.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}