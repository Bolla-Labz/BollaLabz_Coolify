# BollaLabz Coolify Deployment Environment Variables
# Copy this file to .env and populate with production values in Coolify dashboard

# Node Environment
NODE_ENV=production
PORT=3001

# Database (Coolify Managed PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DB_SSL=false

# Redis Cloud (External Service)
REDIS_HOST=redis-xxxxx.cloud.redislabs.com
REDIS_PORT=12345
REDIS_PASSWORD=your_redis_password

# JWT Secrets (Generate new ones for production)
JWT_SECRET=generate_with_crypto_randomBytes
JWT_REFRESH_SECRET=generate_different_secret
SESSION_SECRET=generate_another_secret

# API Configuration
API_KEY=generate_api_key
FRONTEND_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Anthropic AI
ANTHROPIC_API_KEY=your_api_key

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn

# Domain for Traefik routing
DOMAIN=yourdomain.com